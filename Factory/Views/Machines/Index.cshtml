@{
  Layout = "_Layout";
}
@using Factory.Models

<h2>Machines</h2>
<hr />

@if(Model.Count == 0)
{
  <h3>No machines have been purchased.</h3>
}
<ul>
  @foreach(Machine machine in Model)
  {
    <li>@Html.ActionLink($"{machine.Name}", "Details", new { id = machine.MachineId })</li>
  }
</ul>
@Html.ActionLink("Add New Machine", "Create")
@Html.ActionLink("Home", "Index", "Home")