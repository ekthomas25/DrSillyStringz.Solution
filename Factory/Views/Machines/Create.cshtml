@{
  Layout = "_Layout";
}
@model Factory.Models.Machine

<h2>Create Machine Record</h2>
<hr />

@using(Html.BeginForm())
{
  <h3>@Html.LabelFor(model => model.Name)</h3>
  @Html.TextBoxFor(model => model.Name, new { @class="form-control", required = "required" })

  <h3>@Html.LabelFor(model => model.InstallDate, "Installation Date")</h3>
  @Html.TextBoxFor(model => model.InstallDate, "{0:yyyy-MM-dd}", new {@type = "date", @class="form-control", required = "required" })

  <h3>@Html.LabelFor(model => model.OperationalStatus, "Current Operational Status")</h3>
  <span>Operational</span>@Html.RadioButtonFor(m => m.OperationalStatus, "Operational") 
  <span>Being Repaired</span>@Html.RadioButtonFor(m => m.OperationalStatus, "Being Repaired")
  <br />
  <input type="submit" value="Save" class="btn btn-dark" />
}