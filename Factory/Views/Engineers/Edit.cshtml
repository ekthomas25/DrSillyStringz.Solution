@{
  Layout = "_Layout";
}

@model Factory.Models.Engineer

@using(Html.BeginForm())
{
  @Html.HiddenFor(model => model.EngineerId)

    <h3>@Html.LabelFor(model => model.FirstName, "First Name")</h3>
  @Html.EditorFor(model => model.FirstName, new { @class="form-control", required = "required" })

  <h3>@Html.LabelFor(model => model.LastName, "Last Name")</h3>
  @Html.EditorFor(model => model.LastName, new { @class="form-control", required = "required" })

  <h3>@Html.LabelFor(model => model.HireDate, "Hire Date")</h3>
  @Html.EditorFor(model => model.HireDate, "{0:yyyy-MM-dd}", new {@type = "date", @class="form-control", required = "required" })

  <h3>@Html.LabelFor(model => model.WorkStatus, "Current Work Status")</h3>
  <span>Idle</span>@Html.RadioButtonFor(m => m.WorkStatus, "Idle")
  <span>Busy</span>@Html.RadioButtonFor(m => m.WorkStatus, "Busy")

  <h3>@Html.LabelFor(model => model.Notes)</h3>
  @Html.EditorFor(model => model.Notes, new { @class="form-control" })

  <input type="submit" value="Save" class="btn btn-dark" />
}
@Html.ActionLink("Cancel", "Details", new { id = Model.EngineerId })